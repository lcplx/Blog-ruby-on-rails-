<h3>Add Comments</h3>

<%= form_for([@post,@post.comments.build]) do |f| %>

  <p>
    <!-- second parameter wrap title -->
    <%= f.label :username %><br>
    <%= f.text_field(:username, {:class => 'form-control'}) %>
  </p>
  <p>
    <%= f.label :body %><<br>
    <%= f.text_area(:body, {:class =>'form-control'}) %>
  </p>

  <p>
    <%= f.submit({:class =>'btn btn-primary'}) %>
  </p>
<% end %>